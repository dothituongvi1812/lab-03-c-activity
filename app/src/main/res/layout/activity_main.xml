<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="258dp"
        android:layout_height="319dp"
        android:layout_marginLeft="51px"
        android:layout_marginRight="51px"
        android:layout_marginTop="10px"
        android:layout_gravity="center"
        android:src="@drawable/vsmart_live_xanh"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điện Thoại Vsmart Joy 3 - Hàng chính hãng"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textFontWeight="400"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="50dp"
        android:textColor="#000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="22dp">

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:rating="5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:theme="@style/RatingBar"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="99dp"
            android:gravity="center"

            android:text="(Xem 828 đánh giá)"
            android:textColor="#000"
            android:textFontWeight="400"
            android:textSize="15dp"
            android:textStyle="normal" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="23dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textFontWeight="700"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="1.790.000 đ"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="44dp"
           android:textSize="18dp"
           android:layout_marginRight="111dp"
           android:textStyle="normal"
           android:textFontWeight="700"
            android:textColor="#99000000"
           android:text="1.790.000 đ"
           android:foreground="@drawable/strikethough_foreground"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="23dp"
            android:textSize="12dp"
            android:textFontWeight="700"
            android:textStyle="normal"
            android:textColor="#FA0000"
            android:text="Ở ĐÂU RẺ HƠN HOÀN TIỀN"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="8dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:src="@drawable/help"/>
    </LinearLayout>
<Button
    android:id="@+id/buttonChonMau"
    android:layout_width="332dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="4 MÀU - CHỌN MÀU"
    app:icon="@drawable/ic_baseline_chevron_right_24"
    app:iconGravity="end"
    app:iconTint="#000000"
    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
    android:textStyle="normal"
    android:textColor="#000000"
    android:textSize="15dp"
    android:textFontWeight="400"
    android:textAlignment="center"
    android:layout_marginLeft="18dp"
    app:backgroundTint="@android:color/transparent"
    app:cornerRadius="8dp"
    app:strokeColor="#C4C4C4"
    app:strokeWidth="1dp"
    />
<Button
    android:layout_width="326dp"
    android:layout_height="44dp"

    android:backgroundTint="#EE0A0A"
    android:layout_marginTop="71dp"
    android:text="CHỌN MUA"
    android:layout_marginLeft="21dp"
    android:textSize="20dp"
    android:textStyle="normal"
    android:textFontWeight="700"
    app:cornerRadius="10dp"
    />

</LinearLayout>